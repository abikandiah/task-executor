{
	"name": "task-executor",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"type": "module",
	"scripts": {
		"start": "NODE_ENV=production node dist/server.js",
		"dev": "NODE_ENV=development tsx watch src/server.ts",
		"build": "npm run clean && tsc && npm run build:sync-dist",
		"build:sync-dist": "copyfiles -u 2 'src/ui-build/**/*' dist/ui-build/",
		"build:sync-ui": "cd ../task-executor-ui && npm run build && cd ../task-executor && npm run sync-ui",
		"sync-ui": "rimraf src/ui-build && copyfiles -u 3 '../task-executor-ui/dist/**/*' src/ui-build/",
		"clean": "rimraf dist",
		"test": "jest",
		"version:bump": "npm version patch && git push --tags",
		"type-check": "tsc --noEmit",
		"lint": "eslint src/**/*.ts",
		"lint:fix": "eslint --fix src/**/*.ts",
		"format": "prettier --write \"src/**/*.ts\"",
		"format:check": "prettier --check \"src/**/*.ts\""
	},
	"keywords": [],
	"author": "Abilaesh Kandiah <abikandiah@gmail.com>",
	"license": "MIT",
	"dependencies": {
		"compression": "^1.8.1",
		"cors": "^2.8.5",
		"dotenv": "^17.2.3",
		"express": "^5.1.0",
		"express-rate-limit": "^8.2.1",
		"helmet": "^8.1.0",
		"jsonwebtoken": "^9.0.2",
		"morgan": "^1.10.1",
		"winston": "^3.18.3",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@types/compression": "^1.8.1",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.5",
		"@types/jest": "^30.0.0",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/morgan": "^1.9.10",
		"@types/node": "^24.10.1",
		"@types/supertest": "^6.0.3",
		"copyfiles": "^2.4.1",
		"jest": "^30.2.0",
		"nodemon": "^3.1.11",
		"rimraf": "^6.1.2",
		"supertest": "^7.1.4",
		"ts-jest": "^29.4.5",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"moduleFileExtensions": [
			"ts",
			"js",
			"json",
			"node"
		],
		"testMatch": [
			"**/__tests__/**/*.ts"
		],
		"transform": {
			"^.+.ts$": "ts-jest"
		}
	}
}
